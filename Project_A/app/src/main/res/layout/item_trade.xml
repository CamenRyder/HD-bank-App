<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@color/black"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="20dp">
            <TextView
                android:layout_width="100dp"
                android:textColor="@color/Mint05"
                android:text="Ngay giao dich: "
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="100dp"
                android:id="@+id/tv_dateToTrade"
                android:text="12/05/2003"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="20dp">
            <TextView
                android:layout_width="120dp"
                android:textColor="@color/Mint05"
                android:text="So tien giao dich: "
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_priceToTrade"
                android:text="488098.00"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="dong"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <TextView
                android:layout_width="150dp"
                android:textColor="@color/Mint05"
                android:text="Noi dung giao dich: "
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_contentToTrade"
                android:text="700 CREDIT INT CAPITALISE"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>


