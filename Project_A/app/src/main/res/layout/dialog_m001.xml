<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="175dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/broder_6black"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/radius_topblue"
            android:text="Pop up hiện lên và nhắc"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:layout_height="55dp"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Làm ơn đừng để trống thông tin."
        android:textStyle="bold"
        android:paddingTop="22dp"
        android:background="@drawable/radius_bottomwhite"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:id="@+id/tv_text"
        android:paddingStart="12dp"
        android:paddingBottom="22dp"
        android:paddingEnd="12dp"
        android:layout_height="match_parent"/>





</LinearLayout>