<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/frg_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="310dp"
        android:layout_marginStart="45dp"
        android:text=" Tài khoản đăng nhập "
        android:elevation="0.01dp"
        android:background="@color/white"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="385dp"
        android:layout_marginStart="45dp"
        android:elevation="0.01dp"
        android:text=" Mật khẩu đăng nhập "
        android:background="@color/white"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="80dp"
                android:src="@drawable/logo_hd_bank"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="đồng hành cùng"
                android:textSize="14dp"
                android:gravity="center"
                android:paddingHorizontal="3dp"
                android:textColor="@color/black"
                android:paddingBottom="2dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="85dp"
                android:text="Project A"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/Mint05"
                android:layout_height="match_parent"/>

        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="match_parent"
        android:hint="nhập tài khoản"
        android:padding="10dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/broder_6black"
        android:layout_marginHorizontal="30dp"
        android:id="@+id/edt_un"
        android:layout_height="50dp"/>
    <EditText
        android:layout_width="match_parent"
        android:hint="nhập mật khẩu"
        android:inputType="textPassword"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:background="@drawable/broder_6black"
        android:layout_marginHorizontal="30dp"
        android:id="@+id/edt_pw"
        android:layout_height="50dp"/>
    <Button
        android:layout_width="wrap_content"
        android:text="Đăng nhâp"
        android:backgroundTint="@color/Mint05"
        android:layout_gravity="end"
        android:id="@+id/bt_login"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="29dp"
        android:paddingHorizontal="20dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Đăng kí tài khoản/quên mật khẩu?"
        android:layout_gravity="end"
        android:id="@+id/tv_signUp"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content"/>
</LinearLayout>

</FrameLayout>
