<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/DL_drawer"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ln_main04"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_height="250dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="120dp">
                    <TextView
                        android:layout_width="120dp"
                        android:background="@drawable/broder_crilce"
                        android:gravity="center"
                        android:text="avtar"
                        android:textColor="@color/black"
                        android:textSize="70dp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:paddingBottom="10dp"
                        android:layout_height="120dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Doan Minh Hieu"
                            android:id="@+id/tv_m041_name"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--    su li giao dien thong tin-->




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="145dp"
            android:orientation="vertical"
            android:background="@drawable/border_top_28dp"
            android:layout_height="540dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_marginStart="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/item_transfer"
                    android:padding="10dp"
                    android:id="@+id/bt_transfer"
                    android:layout_weight="1"
                    app:tint="@color/Mint05" />
                  <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/item_get_price"
                    android:padding="10dp"
                    android:id="@+id/bt_getPrice"
                    android:layout_weight="1"
                    app:tint="@color/Mint05" />
                  <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/item_history"
                    android:padding="10dp"
                    android:id="@+id/bt_history"
                    android:layout_weight="1"
                    app:tint="@color/Mint05" />
                  <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/item_fen_stranfer"
                    android:padding="11dp"
                      android:layout_marginEnd="40dp"
                    android:id="@+id/bt_friendtransfer"
                    android:layout_weight="1"
                    app:tint="@color/Mint05" />

            </LinearLayout>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:id="@+id/ln_contentHDBANK"
                android:layout_height="match_parent">

<!--                <include layout="@layout/m015_content_4"/>-->
<!--              <include layout="@layout/m015_content_1"/>-->
                <include layout="@layout/m015_content_1"/>
<!--            <include layout="@layout/m015_content_2"/>-->
            </LinearLayout>


            </LinearLayout>






    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_gravity="left"
        android:padding="10dp"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:background="@drawable/broder_6black2"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:paddingEnd="40dp"
            android:id="@+id/tv_repairIn4"
            android:text="Cập nhập thông tin cá nhân"
            android:layout_height="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:background="@drawable/broder_6black2"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:paddingEnd="40dp"
            android:id="@+id/tv_resetPassword"
            android:text="Đổi mật khẩu"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:background="@drawable/broder_6black2"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:paddingEnd="40dp"
            android:id="@+id/tv_aboutMe"
            android:text="Về chúng tôi"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:background="@drawable/broder_6black2"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:paddingEnd="40dp"
            android:id="@+id/tv_logout"
            android:text="Đăng xuất"
            android:layout_height="50dp"/>



    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>